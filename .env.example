# ============================================
# 抖音直播监控平台 - 环境变量配置
# ============================================
# 说明：复制此文件为 .env 并填写实际配置

# ============================================
# 数据库配置
# ============================================
# MySQL 数据库连接字符串
# 格式: mysql+pymysql://用户名:密码@主机:端口/数据库名
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/douyin_live

# ============================================
# Flask 配置
# ============================================
# Flask 密钥（用于 session 加密，请修改为随机字符串）
SECRET_KEY=your-secret-key-change-in-production

# 调试模式（生产环境请设为 False）
DEBUG=False

# ============================================
# 代理配置
# ============================================
# 是否启用代理
PROXY_ENABLED=False

# 代理类型（http 或 socks5）
PROXY_TYPE=http

# 代理主机
PROXY_HOST=127.0.0.1

# 代理端口
PROXY_PORT=7890

# ============================================
# Socket.IO 配置
# ============================================
# 允许的跨域来源（* 表示允许所有来源）
SOCKETIO_CORS_ALLOWED_ORIGINS=*

# 是否启用 Socket.IO 日志
SOCKETIO_LOGGER=False

# 是否启用 Engine.IO 日志
SOCKETIO_ENGINEIO_LOGGER=False

# ============================================
# 监控配置
# ============================================
# 监控重连间隔（秒）
MONITOR_RECONNECT_INTERVAL=30

# 最大重试次数
MONITOR_MAX_RETRIES=5

# 重连延迟（秒）
MONITOR_RECONNECT_DELAY=30

# 轮询直播状态间隔（秒）
MONITOR_STATUS_POLL_INTERVAL=60

# ============================================
# 数据保留配置
# ============================================
# 数据保留天数（0 表示永久保留）
DATA_RETENTION_DAYS=90

# ============================================
# 调度器配置
# ============================================
# 检查失败房间间隔（秒）
SCHEDULER_RESTART_FAILED_INTERVAL=30

# 保存统计快照间隔（秒）
SCHEDULER_STATS_SNAPSHOT_INTERVAL=60

# 清理旧数据间隔（秒）
SCHEDULER_CLEANUPOldData_INTERVAL=3600

# ============================================
# 日志配置
# ============================================
# 日志级别（DEBUG, INFO, WARNING, ERROR, CRITICAL）
LOG_LEVEL=INFO

# 日志格式
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 日志文件路径（相对于项目根目录）
LOG_FILE=logs/app.log
